vi BIT(N);
void update(ll x,ll val)
{
	for(;x<=n;x+=(x&-x))
		BIT[x]+=val;
}
ll query(ll x)
{
	ll res=0;
	for(;x>0;x-=(x&-x))
		res+=BIT[x];
	return res;
}
]]></content>
